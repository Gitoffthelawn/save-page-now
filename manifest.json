{
	"manifest_version": 2,

	"name": "Save Page Now",
	"version": "0.1.3",

	"description": "Archive webpages to the Wayback Machine using Save Page Now",
	
	"icons": {
		"44": "icon_savePage.png"
	},
	
	"browser_specific_settings": {
		"gecko": {
			"id": "save-page-now@tqdv.addons.mozilla.org",
			"strict_min_version": "55.0"
		}
	},

	"permissions": [
		"activeTab",
		"contextMenus"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": {
			"44": "icon_savePage.png"
		}
	},

	"content_scripts": [
		{
			"matches": ["*://web.archive.org/save", "*://web.archive.org/save/"],
			"js": ["save.js"]
		}
	]
}